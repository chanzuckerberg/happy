{
    "config_version": "v3",
    "terraform_version": "1.3.0",
    "default_env": "rdev",
    "app": "cerbos-sidecar",
    "default_compose_env_file": ".env.ecr",
    "slice_default_tag": "branch-main",
    "services": [
        "frontend"
    ],
    "slices": {},
    "stack_defaults": {
        "source": "git@github.com:chanzuckerberg/happy//terraform/modules/happy-stack-eks?ref=alokshin/cerbos-sidecar",
        "routing_method": "CONTEXT",
        "create_dashboard": true,
        "services": {
            "frontend": {
                "name": "frontend",
                "desired_count": 2,
                "max_count": 2,
                "scaling_cpu_threshold_percentage": 80,
                "port": 3000,
                "memory": "128Mi",
                "cpu": "100m",
                "health_check_path": "/_cerbos/health",
                "health_check_scheme": "HTTPS",
                "service_type": "EXTERNAL",
                "path": "/*",
                "priority": 0,
                "success_codes": "200-399",
                "initial_delay_seconds": 30,
                "period_seconds": 3,
                "platform_architecture": "amd64",
                "synthetics": false,
                "sidecars": {
                    "echo": {
                        "image": "ealen/echo-server",
                        "tag": "0.7.0",
                        "port": 80,
                        "cpu": "100m",
                        "memory": "128Mi",
                        "volume_mounts": {
                            "sock": {
                                "mount_path": "/sock"
                            },
                            "config": {
                                "mount_path": "/config",
                                "read_only": true
                            },
                            "policies": {
                                "mount_path": "/policies"
                            }
                        }
                    }
                },
                "volumes": {
                    "sock": {
                        "type": "EMPTY_DIR"
                    },
                    "config": {
                        "type": "CONFIGMAP",
                        "ref": "%STACK_NAME%-cerbos-sidecar-demo"
                    },
                    "certs": {
                        "type": "SECRET",
                        "ref": "%STACK_NAME%-cerbos-sidecar-demo"
                    },
                    "policies": {
                        "type": "EMPTY_DIR"
                    }
                }
            }
        }
    },
    "environments": {
        "rdev": {
            "aws_profile": "czi-playground",
            "k8s": {
                "namespace": "si-rdev-happy-eks-rdev-happy-env",
                "cluster_id": "si-playground-eks-v2",
                "auth_method": "eks",
                "context": "si-playground-eks-v2"
            },
            "terraform_directory": ".happy/terraform/envs/rdev",
            "task_launch_type": "k8s",
            "auto_run_migrations": false,
            "stack_overrides": {
                "create_dashboard": false,
                "services": {
                    "frontend": {
                        "desired_count": 1,
                        "max_count": 1,
                        "service_type": "INTERNAL"
                    }
                }
            }
        }
    },
    "features": {
        "enable_happy_api_usage": true,
        "enable_ecr_auto_creation": true,
        "enable_dynamo_locking": true
    },
    "tasks": {}
}