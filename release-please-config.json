{
  "release-type": "simple",
  "pull-request-title-pattern": "chore${scope}: release${component} ${version}",
  "bump-minor-pre-major": true,
  "changelog-types": [
    {
      "type": "feat",
      "section": "Features",
      "hidden": false
    },
    {
      "type": "chore",
      "section": "Misc",
      "hidden": false
    },
    {
      "type": "fix",
      "section": "BugFixes",
      "hidden": false
    }
  ],
  "packages": {
    "cli": {
      "package-name": "cli"
    },
    "api": {
      "package-name": "api"
    },
    "shared": {
      "package-name": "shared",
      "release-as": "0.32.0"
    }
  },
  "plugins": [
    {
      "type": "linked-versions",
      "group-name": "happy platform",
      "components": [
        "cli",
        "api",
        "shared"
      ]
    }
  ]
}
