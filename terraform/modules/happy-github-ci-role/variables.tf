variable "tags" {
  description = "Standard tags. Typically generated by fogg."
  type = object({
    env : string,
    owner : string,
    project : string,
    service : string,
    managedBy : string,
  })
}

variable "happy_app_name" {
  type        = string
  description = "The name of the happy application."
}

variable "ecr_repo_arns" {
  description = "The ARNs of the ECR repos that the role should have permissions to"
  type        = set(string)
  default     = []
}

variable "authorized_github_repos" {
  description = "List of Github repos that are authorized to assume the created CI role"
  type        = set(string)
  default     = []
}
