variable "tags" {
  description = "Standard tags. Typically generated by fogg."
  type = object({
    env : string,
    owner : string,
    project : string,
    service : string,
    managedBy : string,
  })
}

variable "ecrs" {
  description = "The ECRs that the role should have permissions to"
  type = map(object({
    repository_arn : string,
  }))
  default = {}
}

variable "authorized_github_repos" {
  description = "Map of (arbitrary) identifier to Github repo and happy app name that are authorized to assume the created CI role"
  type        = map(object({ repo_name : string, app_name : string }))
}

variable "eks_cluster_arn" {
  description = "The ARN of the EKS cluster that the role should have permissions to"
  type        = string
  default     = ""
}

variable "dynamodb_table_arn" {
  description = "The ARN of the dynamodb table that the role should have permissions to"
  type        = string
  default     = ""
}